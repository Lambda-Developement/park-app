<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.parkapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Parking Map</name>
    <icon src="res/app_icon.png" />
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <universal-links>
        <host name="io.cordova.parkapp" scheme="http">
            <path url="/password/*" />
            <path url="/mail/*" />
        </host>
    </universal-links>
    <preference name="AndroidLaunchMode" value="singleInstance" />
</widget>
